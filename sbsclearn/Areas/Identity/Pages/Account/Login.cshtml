@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h2 style="padding-top: 1.5em">SBSC Learn</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control edge"/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control edge" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group"  >
                    <button type="submit" class="btn btn-info edgeIt" >Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2" style="margin-top: -40px">
        <section>
            <h6>SBSC Learn Live</h6>
            <p><strong>October 13th - 16th</strong> </p>

            <h1 style="text-align: left">The Ultimate technology skills conference is evolving</h1>

            <h3 style="text-align:justify">Join us for a free, virtual event to learn how to unlock the full power of technology, connect with your peers and get inspired to think further outside the box than ever before.</h3>
            <div class="form-group" style="padding-top: 1em">
                <button type="submit" class="btn btn-info" style="border-radius:0px">Get my pass</button>
            </div>
