<div class="row" style="padding-top: 10px">
    @*@foreach (var item in Model)*@
    @foreach (var user in (IEnumerable<sbsclearn.Models.Entities.Course>)ViewData["courses"])
    {
        var picturePath = "~/images/FileUploads/" + (user.FileUploadPath ?? "image1.png");
        <div class="col-md-3">
            <div class="panel panel-default">
                <img class="img-responsive thumbnail" src="@picturePath" id="Panel_Image" asp-append-version="true">
                <div class="panel-body">

                    <h5 class="panel-title coursefont">@user.CourseName</h5>
                    <p>	&#8358; @user.Cost</p>
                    @*<p class="">@item.CourseDetails</p>*@
                    <a asp-action="Details" asp-route-id="@user.CourseId" asp-controller="Courses" class="btn btn-info" style="border-radius: 0px">View Details </a>
                    <a asp-action="Details" asp-route-id="@user.CourseId" asp-controller="Courses" class="btn btn-info" style="border-radius: 0px">Enroll </a>
                </div>
            </div>

        </div>
    }

</div>

