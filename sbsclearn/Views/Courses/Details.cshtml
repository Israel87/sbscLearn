@model sbsclearn.Models.Entities.Course

@{
    ViewData["Title"] = "Details";
    // var picturePath = "~/images/FileUploads/" + (Model.FileUploadPath ?? "image1.png");
}

<h2>Details</h2>

<div class="row justify-content-center m-3">
    <div class="col-sm-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Html.DisplayFor(model => model.CourseName)
            </div>
            <div class="panel-body">
                @{
                    var picturePath = "~/images/FileUploads/" + (Model.FileUploadPath ?? "image1.png");
                }
                <img class="img-responsive thumbnail" src="@picturePath" asp-append-version="true" />
                <div class="form-group" style="padding-bottom:">
                    <label>@Html.DisplayNameFor(model => model.Facilitator) : </label>
                    @Html.DisplayFor(model => model.Facilitator)
                </div>
                <div class="form-group">
                    <label> @Html.DisplayNameFor(model => model.CourseDetails) : </label>
                    @Html.DisplayFor(model => model.CourseDetails)
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.CourseId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
